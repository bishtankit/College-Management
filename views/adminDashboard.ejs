  <body>



    <nav class="navbar navbar-expand-lg navbar-light nav-style">
      <a class="navbar-brand mx-5" href="#"><h5>Admin</h5></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link active" href="#"><h5>Course</h5> <span class="sr-only">(current)</span></a>
          <a class="nav-item nav-link" href="/sign-up"><h5>Add Student</h5></a>
          <a class="nav-item nav-link bg-info rounded" href="/log-out"><h5 class="text-white">Log-out</h5></a>
        </div>
      </div>
    </nav>


<div class="pt-5">


<% if(success) { %>

  <div class="alert alert-warning alert-dismissible fade show w-50" role="alert">
    <h5 class="d-inline">Student attendance has been set succesfully!</h5>
    <a type="button" class="close" data-dismiss="alert" aria-label="Close">
      <i class="fa-solid fa-xmark fa-lg"></i>
    </a>
  </div>

<% } %>



<div class="row">
<% var i = 0; %>

  <% students.forEach((student)=>{ %>
  <% i = i+1; %>
    <div class="card my-4 col-3 mx-4" >
      <div class="card-body">
        <h5 class="card-title"> <%= student.fname %> <%= student.lname %> </h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= student.username %> </h6>


        <button class="btn btn-secondary rounded" type="button" data-toggle="collapse" data-target="#a<%= i %>" aria-expanded="false" aria-controls="collapseExample">
            <h6>Manage student</h6>
          </button>

      </div>
    </div>



    <form class="collapse" id="a<%= i %>" method="post" action="/set-attendance">
      <div class="card card-body w-50 d-block">
        <h5>Manage <strong> <%= student.fname %>'s </strong> attendance</h5>
        <input type="number" name="english" placeholder="English" min="0" max="100" value= <%= student.attendance.english %> >
        <input type="number" name="math" placeholder="Math" min="0" max="100" value= <%= student.attendance.math %> >
        <input type="number" name="java" placeholder="Java" min="0" max="100" value= <%= student.attendance.java %> >
        <input type="number" name="web" placeholder="Web" min="0" max="100" value= <%= student.attendance.web %> >
        <button type="submit" name="id" class="btn btn-md btn-primary rounded" value= <%= student._id %> >Submit</button>
      </div>

    </form>

  <% }) %>

</div>



</div>

  </body>








  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
