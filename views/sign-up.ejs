<div class="home-background">


<div align="center" class="home-content">


<div class="sign-in-form">
<!--  change home to signin  -->



    <form class="form-signin" method="post" action="/sign-up">
          <img class="amity-logo" src="images/amity-logo.jpg" alt="">
          <hr>
          <h1 class="h3 mb-3 font-weight-normal">Please sign up</h1>
          <hr>
          <label for="inputEmail" class="sr-only">Email address</label>
          <input name="username" type="username" id="inputEmail" class="form-control" placeholder="Email address" required="" autofocus="">
          <hr>
          <label for="inputPassword" class="sr-only">Create Password</label>
          <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Create Password" required="">
          <hr>
          <div class="">
          <input name="fname" type="text" class="form-control" placeholder="First Name" required="" autofocus="">
          <hr>
          <input name="lname" type="text" class="form-control" placeholder="Last Name" required="" autofocus="">
          </div>
          <div class="sign-in-button">
                <button class="btn btn-md btn-primary btn-block" type="submit"><h6 style="line-height: 1;">Sign up</h6></button>
                <hr>
                <a href="/" class="text-white bg-dark"><h4>Sign-in</h4></a>
          </div>



        <div style="Height: 500px;">

        </div>




